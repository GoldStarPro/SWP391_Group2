@model HR_Management.Models.Unit

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Qualification Details</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item">Unit</li>
        <li class="breadcrumb-item active" aria-current="page">Detail</li>
    </ol>
</div>

<div class="card mb-3">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h4 class="m-0 font-weight-bold text-primary">Unit Detail</h4>
    </div>
    <div class="card-body">
        <div class="form-group">
            <div class="card-body">
                <div class="form-group">
                    <label class="control-label">ID</label>
                    <input asp-for="@Model.Unit_ID" disabled class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Qualification Name</label>
                    <input asp-for="@Model.Unit_Name" disabled class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Note</label>
                    <textarea asp-for="@Model.Notes" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <a asp-action="Edit" asp-route-id="@Model.Unit_ID" class="btn btn-primary">Change information</a>
                    <a asp-action="Index" class="btn btn-secondary">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
