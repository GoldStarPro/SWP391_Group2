@model IEnumerable<HR_Management.Models.Salary>

@{
    ViewData["Title"] = "Salary Table";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800 font-weight-bold">Salary List</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item">Salary Table</li>
    </ol>
</div>

<!-- Row -->
<div class="row">
    <!-- Datatables -->
    <div class="col-lg-12">
        <div class="card mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Salary</h6>
                <a asp-action="Create" class="btn btn-success">Add New</a>
            </div>
            <div class="table-responsive p-3">
                <table class="table align-items-center table-flush" id="dataTable">
                    <thead class="thead-light">
                        <tr>
                            <th>Qualification</th>
                            <th>Unit</th>
                            <th>Expertise</th>
                            <th>Basic Salary</th>
                            <th>Bonus</th>
                            @* <th>Entry Date</th> *@
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Qualification</th>
                            <th>Unit</th>
                            <th>Expertise</th>
                            <th>Basic Salary</th>
                            <th>Bonus</th>
                            @* <th>Entry Date</th> *@
                            <th>Actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.QualificationIDNavigation.Qualification_Name</td>
                                <td>@item.UnitIDNavigation.Unit_Name</td>
                                <td>@item.ExpertiseIDNavigation.Expertise_Name</td>
                                <td>@item.Basic_Salary</td>
                                <td>@item.New_Basic_Salary</td>
                                @* <td>@item.Entry_Date.ToString("dd/MM/yyyy")</td> *@
                                <td>
                                    <a class="btn btn-sm btn-primary mr-2" asp-action="Details" asp-route-id="@item.Salary_ID" title="View">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>
                                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Salary_ID" title="Delete">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>