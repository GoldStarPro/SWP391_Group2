@{
    ViewData["Title"] = "Thy";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container p-4">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Personal Information</h1>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="FirstHomePage" asp-controller="Home">Home</a></li>
                <li class="breadcrumb-item">Profile</li>
            </ol>
        </div>

        <div class="card mb-3">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h4 class="m-0 font-weight-bold text-primary">View Info</h4>
            </div>
            <form>
                <div class="text-danger"></div>
                <input type="hidden" />
                <div class="card-body row">
                    <div class="form-group col-lg-12">
                        <label class="control-label">Avatar</label>
                        <div class="text-center">
                            <img class="rounded" src="~/assets/img/profile.jpg" width="250">
                        </div>
                    </div>
                    <div class="form-group col-lg-6">
                        <label class="control-label">Full Name</label>
                        <input type="text" readonly class="form-control" value="Lê Việt Thy" />
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-6">
                        <label class="control-label">Date of birth</label>
                        <input type="text" readonly class="form-control" value="22/11/2003" />
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-6">
                        <label class="control-label">Ethnicity</label>
                        <input type="text" readonly class="form-control" value="Kinh" />
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-6">
                        <label class="control-label">Religion</label>
                        <input readonly type="text" class="form-control" value="Không" />
                    </div>
                    <div class="form-group col-lg-6">
                        <label class="control-label">Nationality</label>
                        <input readonly type="text" class="form-control" value="Việt Nam" />
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-6">
                        <label class="control-label">Gender</label>
                        <input readonly class="form-control" value="Female" />
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-6">
                        <label class="control-label">Phone Number</label>
                        <input readonly class="form-control" value="0822543757" />
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-6">
                        <label class="control-label">Email</label>
                        <input readonly class="form-control" value="levietthy03@gmail.com" />
                    </div>
                    <div class="form-group col-lg-12 text-end mt-3">
                        <a asp-controller="Home" asp-action="FirstHomePage" class="btn btn-secondary">Come Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
