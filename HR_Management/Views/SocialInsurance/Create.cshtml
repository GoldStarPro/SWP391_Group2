@model HR_Management.Models.SocialInsurance

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800 font-weight-bold">Social Insurance List</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item">Social Insurance</li>
        <li class="breadcrumb-item active" aria-current="page">Add</li>
    </ol>
</div>

<div class="card mb-3">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h4 class="m-0 font-weight-bold text-primary">Add New Social Insurance</h4>
    </div>
    <div class="card-body">
        <div class="form-group">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Issue_Date" class="control-label">Issue Date</label>
                            <input asp-for="Issue_Date" class="form-control" type="date"/>
                            <span asp-validation-for="Issue_Date" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Registered_Medical_Facility" class="control-label">Registered Medical Facility</label>
                            <input asp-for="Registered_Medical_Facility" class="form-control"/>
                            <span asp-validation-for="Registered_Medical_Facility" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Issue_Place" class="control-label">Issue Place</label>
                            <input asp-for="Issue_Place" class="form-control" />
                            <span asp-validation-for="Issue_Place" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Notes" class="control-label">Notes</label>
                            <textarea asp-for="Notes" class="form-control"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Come Back</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

