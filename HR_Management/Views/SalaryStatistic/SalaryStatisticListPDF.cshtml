@model IEnumerable<HR_Management.Models.SalaryStatistic>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Salary Statistic List</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
            white-space: nowrap;
        }

        th {
            background-color: #f2f2f2;
        }

        thead {
            display: table-header-group;
        }

        h1 {
            text-align: center;
            color: red;
        }

        .page-break {
            page-break-before: always;
        }
    </style>
</head>
<body>
    <h1>Salary Statistic List</h1>

    @for (int page = 0; page < Math.Ceiling((double)Model.Count() / 25); page++)
    {
        if (page > 0)
        {
            <div class="page-break"></div>
        }

        <table>
            <thead>
                <tr>
                    <th>No.</th>
                    <th>Month</th>
                    <th>Employee Name</th>
                    <th>Basic Salary</th>
                    <th>Tax</th>
                    <th>Bonus</th>
                    <th>Deducted (If Any)</th>
                    <th>The Realistic Total</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = page * 25; i < (page + 1) * 25 && i < Model.Count(); i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model.ElementAt(i).MonthIDNavigation.Month_Name</td>
                        <td>@Model.ElementAt(i).EmployeeIDNavigation.Full_Name</td>
                        <td>@Model.ElementAt(i).BasicSalary</td>
                        <td>@Model.ElementAt(i).TaxToPay</td>
                        <td>@Model.ElementAt(i).Bonus</td>
                        <td>@Model.ElementAt(i).Fine</td>
                        <td>@Model.ElementAt(i).TotalSalary</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</body>
</html>
