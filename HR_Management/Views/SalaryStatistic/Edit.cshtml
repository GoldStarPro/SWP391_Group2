@model HR_Management.Models.SalaryStatistic

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800 font-weight-bold">Edit Salary Satistic</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item">Salary Statistic</li>
        <li class="breadcrumb-item active" aria-current="page">Edit</li>
    </ol>
</div>

<div class="card mb-3">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h4 class="m-0 font-weight-bold text-primary">Edit Information</h4>
    </div>
    <div class="card-body">
        <div class="form-group">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Salary_Statistic_ID" />
                    <input type="hidden" asp-for="BasicSalary" />
                    <input type="hidden" asp-for="TaxToPay" />
                    <input type="hidden" asp-for="TotalSalary" />
                    <input type="hidden" asp-for="Create_Date" />
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Employee_ID" class="control-label">Employee ID</label>
                            <select asp-for="Employee_ID" class="form-control" asp-items="ViewBag.Employee_ID"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Month_ID" class="control-label">The Month Get Salary</label>
                            <select asp-for="Month_ID" class="form-control" asp-items="ViewBag.Month_ID"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Bonus" class="control-label">Bonus</label>
                            <input asp-for="Bonus" class="form-control" />
                            <span asp-validation-for="Bonus" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Fine" class="control-label">Deducted (If Any)</label>
                            <input asp-for="Fine" class="form-control" />
                            <span asp-validation-for="Fine" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Notes" class="control-label">Notes</label>
                            <textarea asp-for="Notes" class="form-control"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Come Back</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

