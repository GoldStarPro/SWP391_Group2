@model HR_Management.Models.SalaryStatistic

@{
    ViewData["Title"] = "Delete Salary Statistic";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h1 class="h4">Delete @Model.MonthIDNavigation.Month_Name Salary of Employee @Model.EmployeeIDNavigation.Full_Name </h1>
        </div>
        <div class="card-body">
            <h3 class="text-danger">Are you sure you want to delete this?</h3>
            <div class="my-4">
                <h4 class="text-primary"><strong>Salary Statistic</strong></h4>
                <hr />
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.BasicSalary)</th>
                            <td>@Html.DisplayFor(model => model.BasicSalary)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.TaxToPay)</th>
                            <td>@Html.DisplayFor(model => model.TaxToPay)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Bonus)</th>
                            <td>@Html.DisplayFor(model => model.Bonus)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Fine)</th>
                            <td>@Html.DisplayFor(model => model.Fine)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Notes)</th>
                            <td>@Html.DisplayFor(model => model.Notes)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.TotalSalary)</th>
                            <td>@Html.DisplayFor(model => model.TotalSalary)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Create_Date)</th>
                            <td>@Html.DisplayFor(model => model.Create_Date)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.EmployeeIDNavigation.Full_Name)</th>
                            <td>@Html.DisplayFor(model => model.EmployeeIDNavigation.Full_Name)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.MonthIDNavigation.Month_Name)</th>
                            <td>@Html.DisplayFor(model => model.MonthIDNavigation.Month_Name)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Salary_Statistic_ID" />
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
