
@model HR_Management.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-5">
    <div class="card">

        <div class="card-header bg-danger text-white">
            <h1>Delete Employee</h1>
        </div>

        <div class="card-body">
            <h3 class="text-danger">Are you sure you want to delete this?</h3>
            <div class="my-4">
                <h4 class="text-primary"><strong>Employee Details</strong></h4>
                <hr />
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Full_Name)</th>
                            <td>@Html.DisplayFor(model => model.Full_Name)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Gender)</th>
                            <td>@Html.DisplayFor(model => model.Gender)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Place_Of_Birth)</th>
                            <td>@Html.DisplayFor(model => model.Place_Of_Birth)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Address)</th>
                            <td>@Html.DisplayFor(model => model.Address)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                            <td>@Html.DisplayFor(model => model.PhoneNumber)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <td>@Html.DisplayFor(model => model.Email)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Permission)</th>
                            <td>@Html.DisplayFor(model => model.Permission)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Notes)</th>
                            <td>@Html.DisplayFor(model => model.Notes)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Ethnicity)</th>
                            <td>@Html.DisplayFor(model => model.Ethnicity)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Religion)</th>
                            <td>@Html.DisplayFor(model => model.Religion)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Nationality)</th>
                            <td>@Html.DisplayFor(model => model.Nationality)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.SocialInsuranceIDNavigation.Registered_Medical_Facility)</th>
                            <td>@Html.DisplayFor(model => model.SocialInsuranceIDNavigation.Registered_Medical_Facility)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.ExpertiseIDNavigation.Expertise_Name)</th>
                            <td>@Html.DisplayFor(model => model.ExpertiseIDNavigation.Expertise_Name)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.UnitIDNavigation.Unit_Name)</th>
                            <td>@Html.DisplayFor(model => model.UnitIDNavigation.Unit_Name)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.SalaryIDNavigation.Basic_Salary)</th>
                            <td>@Html.DisplayFor(model => model.SalaryIDNavigation.Basic_Salary)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.QualificationIDNavigation.Qualification_Name)</th>
                            <td>@Html.DisplayFor(model => model.QualificationIDNavigation.Qualification_Name)</td>
                        </tr>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.TaxIDNavigation.Tax_Authority)</th>
                            <td>@Html.DisplayFor(model => model.TaxIDNavigation.Tax_Authority)</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Employee_ID" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>

