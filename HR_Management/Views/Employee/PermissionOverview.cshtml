@model IEnumerable<HR_Management.Models.Employee>
@{
    ViewData["Title"] = "Permission";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800 font-weight-bold">Permission Overview</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item">Overview</li>
    </ol>
</div>

<!-- Row -->
<div class="row">
    <!-- Datatables -->
    <div class="col-lg-12">
        <div class="card mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Employees</h6>
            </div>
            <div class="table-responsive p-3">
                <table class="table align-items-center table-flush" id="dataTable">
                    <thead class="thead-light">
                        <tr>
                            <th>Image</th>
                            <th>Full Name</th>
                            <th>Unit</th>
                            <th>Expertise</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Image</th>
                            <th>Full Name</th>
                            <th>Unit</th>
                            <th>Expertise</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @{
                                        var imageUrl = !string.IsNullOrEmpty(item.Image)
                                        ? item.Image
                                        : (item.Gender == "Male" ? "/assets/img/boy.png" : "/assets/img/girl.png");
                                    }
                                    <img src="@imageUrl" alt="@item.Full_Name" class="img-thumbnail" width="100">
                                </td>
                                <td>@item.Full_Name</td>
                                <td>
                                        @item.UnitIDNavigation.Unit_Name
                                </td>

                                <td>
                                        @item.ExpertiseIDNavigation.Expertise_Name
                                </td>

                                <td>@item.Email</td>
                                <td>
                                    @{
                                        if (item.Permission == 1)
                                        {
                                            <p>Admin</p>
                                        }
                                        if (item.Permission == 2)
                                        {
                                            <p>Manager</p>
                                        }
                                        if (item.Permission == 3)
                                        {
                                            <p>Employee</p>
                                        }
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-primary" asp-action="Permission" asp-route-id="@item.Employee_ID">Permission</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
