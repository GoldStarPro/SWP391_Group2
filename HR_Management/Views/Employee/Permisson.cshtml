@model IEnumerable<HR_Management.Models.Employee>
@{
    ViewData["Title"] = "Permisson";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Permisson Overview</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item">Employees</li>
    </ol>
</div>

<!-- Row -->
<div class="row">
    <!-- Datatables -->
    <div class="col-lg-12">
        <div class="card mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Employees</h6>
            </div>
            <div class="table-responsive p-3">
                <table class="table align-items-center table-flush" id="dataTable">
                    <thead class="thead-light">
                        <tr>
                            <th>Image</th>
                            <th>Full Name</th>
                            <th>Unit</th>
                            <th>Expertise</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Image</th>
                            <th>Full Name</th>
                            <th>Unit</th>
                            <th>Expertise</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><img src="@item.Image" alt="@item.Full_Name" class="img-thumbnail" width="100"></td>
                                <td>@item.Full_Name</td>
                                <td>
                                    @if (item.Unit_ID != null)
                                    {
                                        @item.UnitIDNavigation.Unit_Name
                                    }
                                    else
                                    {
                                        <p>"Empty"</p>
                                    }
                                </td>
                                <td>
                                    @if (@item.Expertise_ID != null)
                                    {
                                        @item.ExpertiseIDNavigation.Expertise_Name
                                    }
                                    else
                                    {
                                        <p>"Empty"</p>
                                    }
                                </td>
                                <td>@item.Email</td>
                                <td>
                                    @{
                                        if (item.Permisson == 1)
                                        {
                                            <p>Admin</p>
                                        }
                                        if (item.Permisson == 2)
                                        {
                                            <p>Manager</p>
                                        }
                                        if (item.Permisson == 3)
                                        {
                                            <p>Employee</p>
                                        }
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Employee_ID">Permisson</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
