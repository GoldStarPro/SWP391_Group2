@model HR_Management.Models.Employee

@{
    ViewData["Title"] = "Create Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Add A New Employee</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item">Employees</li>
        <li class="breadcrumb-item">Add</li>
    </ol>
</div>
<div class="card mb-3">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h4 class="m-0 font-weight-bold text-primary">Add A New Employee</h4>
    </div>
<form method="post" enctype="multipart/form-data" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="card-body row">
            <div class="form-group col-lg-12">
                <label asp-for="ConvertImage" class="control-label">Image</label>
                <div class="input-group mb-3">
                    <div class="custom-file">
                        <input asp-for="ConvertImage" class="custom-file-input">
                        <label asp-for="ConvertImage" class="custom-file-label">Choose file</label>
                    </div>
                </div>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="Full_Name" class="control-label">Full Name</label>
                <input asp-for="Full_Name" class="form-control" />
                <span asp-validation-for="Full_Name" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="Date_Of_Birth" class="control-label">Date Of Birth</label>
                <input asp-for="Date_Of_Birth" type="date" class="form-control" />
                <span asp-validation-for="Date_Of_Birth" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label class="control-label">ID Card Number</label>
                <input asp-for="ID_Card_Number" class="form-control" />
                <span asp-validation-for="ID_Card_Number" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="Gender" class="control-label">Gender</label>
                <select asp-for="Gender" class="form-control">
                    <option value="">--Select Gender--</option>
                    <option value="Nam">Male</option>
                    <option value="Nữ">Female</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="Permission" class="control-label">Permission</label>
                <select asp-for="Permission" class="form-control">
                    <option value=3>Employee</option>
                    <option value=2>Manager</option>
                    <option value=1>Admin</option>
                </select>
                <span asp-validation-for="Permission" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="Qualification_ID" class="control-label">Qualification</label>
                <select asp-for="Qualification_ID" class="form-control" asp-items="ViewBag.Qualification_ID"></select>
                <span asp-validation-for="Qualification_ID" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="Social_Insurance_ID" class="control-label">Registered Medical Facility</label>
                <select asp-for="Social_Insurance_ID" class="form-control" asp-items="ViewBag.Social_Insurance_ID"></select>
                <span asp-validation-for="Social_Insurance_ID" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="Salary_ID" class="control-label">Basic Salary</label>
                <select asp-for="Salary_ID" class="form-control" asp-items="ViewBag.Salary_ID"></select>
                <span asp-validation-for="Salary_ID" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="Unit_ID" class="control-label">Unit</label>
                <select asp-for="Unit_ID" class="form-control" asp-items="ViewBag.Unit_ID"></select>
                <span asp-validation-for="Unit_ID" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="Tax_ID" class="control-label">Tax Authority</label>
                <select asp-for="Tax_ID" class="form-control" asp-items="ViewBag.Tax_ID"></select>
                <span asp-validation-for="Tax_ID" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="Expertise_ID" class="control-label">Expertise</label>
                <select asp-for="Expertise_ID" class="form-control" asp-items="ViewBag.Expertise_ID"></select>
                <span asp-validation-for="Expertise_ID" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-12">
                <label asp-for="Place_Of_Birth" class="control-label">Place Of Birth</label>
                <input asp-for="Place_Of_Birth" class="form-control" />
                <span asp-validation-for="Place_Of_Birth" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-12">
                <label asp-for="Address" class="control-label">Address</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="Ethnicity" class="control-label">Ethnicity</label>
                <input asp-for="Ethnicity" class="form-control" />
                <span asp-validation-for="Ethnicity" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="Religion" class="control-label">Religion</label>
                <input asp-for="Religion" class="form-control" />
                <span asp-validation-for="Religion" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="Nationality" class="control-label">Nationality</label>
                <input asp-for="Nationality" class="form-control" />
                <span asp-validation-for="Nationality" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-12">
                <label asp-for="Notes" class="control-label">Notes</label>
                <textarea asp-for="Notes" class="form-control"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
                <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Come Back</a>
            </div>
        </div>
    </form>
</div>

